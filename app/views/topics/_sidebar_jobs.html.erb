<div class="panel panel-default">
  <div class="panel-heading">急聘 <i class="fa fa-bolt"></i></div>
  <div class="panel-body">

    <% Topic.where(node_id: Node.job_id).popular.withoutDraft.limit(5).each_with_index do |topic, i| %>

        <div class="topic media topic-<%= topic.id %>">
          <div class="avatar media-left">
            <%= user_avatar_tag(topic.user, :sm) %>
          </div>
          <div class="infos media-body">
            <div class="title media-heading">
              <%= link_to(main_app.topic_path(topic), title: topic.title) do %>
                  <%= topic.title %>
              <% end %>
            </div>
          </div>
        </div>

    <% end %>

  </div>
</div>