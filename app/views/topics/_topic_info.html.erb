<div class="panel-heading media clearfix">
  <div class="media-body">
    <h1 class="media-heading">
      <%= render_node_name(topic.node_name, topic.node_id) %>
      <span class="title">
        <%= topic.title %>
      </span>
      <%= topic_close_tag(topic) %>
    </h1>
    <% content_for :header do %>
      <div class="navbar-nav">
        <div class="navbar-topic-title">
          <a href="#" class="topic-title pull-left" title="<%= topic.title %>" data-type="top">
            <h1><span class="node"><%= topic.node_name %></span> <span class="title"><%= topic.title %><%= topic_close_tag(topic) %></span></h1>
          </a>
        </div>
      </div>
    <% end %>
    <div class="info">
      <%= user_name_tag(topic.user, data: { author: true }) %>
      <span class="hidden-mobile">
        <% if topic.team %>
        for <%= user_name_tag(topic.team) %>
        <% end %>
      </span>
       路
      <%= timeago(topic.created_at) %>
      <% if !topic.last_reply_user_login.blank? %>
      <span class="hidden-mobile">
         路
        <%= t("common.last_by")%> <%= user_name_tag(topic.last_reply_user) %> <%= raw t("common.reply_at", time: timeago(topic.replied_at))%>
      <% end %>

      <% if !topic.modified_admin.blank? %>
         路
        <%= t("common.modified_by_admin")%> <%= user_name_tag(topic.modified_admin) %>
      <% end %>
       路
      <%= topic.hits %> <%= t("common.read_times")%>
    </div>
  </div>

  <% if mobile? %>
  <div class="avatar media-right">
    <%= user_avatar_tag(@topic.user, :md) %>
  </div>
  <%end%>
</div>
